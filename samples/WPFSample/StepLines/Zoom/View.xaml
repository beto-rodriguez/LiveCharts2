<UserControl x:Class="WPFSample.StepLines.Zoom.View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:vms="clr-namespace:ViewModelsSamples.StepLines.Zoom;assembly=ViewModelsSamples">
    <UserControl.DataContext>
        <vms:ViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Use the mouse wheel to zoom in/out, click hold and drag to move panning"></TextBlock>
        <lvc:CartesianChart Grid.Row="1" Series="{Binding SeriesCollection}" ZoomMode="X"></lvc:CartesianChart>
    </Grid>
</UserControl>
