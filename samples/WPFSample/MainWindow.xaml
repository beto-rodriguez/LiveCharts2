<Window x:Class="WPFSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFSample"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF" 
        xmlns:vm="clr-namespace:ViewModelsSamples;assembly=ViewModelsSamples"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <!--<vm:PieViewModel></vm:PieViewModel>-->
        <vm:CartesianViewModel></vm:CartesianViewModel>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Background="Red">
            <Button>Action!</Button>
        </StackPanel>
        <!--<lvc:PieChart Grid.Row="1" Series="{Binding Series}" LegendPosition="Right"> </lvc:PieChart>-->
        <lvc:CartesianChart Grid.Row="1" Series="{Binding Series}" YAxes="{Binding YAxes}" XAxes="{Binding XAxes}" 
                            LegendPosition="Right" TooltipPosition="Top" TooltipFindingStrategy="CompareOnlyX">
        </lvc:CartesianChart>
    </Grid>
</Window>
