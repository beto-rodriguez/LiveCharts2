<UserControl x:Class="AvaloniaSample.Bars.AutoUpdate.View"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
             xmlns:vms="using:ViewModelsSamples.Bars.AutoUpdate">
  <UserControl.DataContext>
    <vms:ViewModel/>
  </UserControl.DataContext>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="50"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <StackPanel Grid.Row="0" Orientation="Horizontal">
      <Button Margin="6" Command="{Binding ToggleVisibilityCommand}">ToggleVisible</Button>
      <Button Margin="6" Command="{Binding ClearSeriesCommand}">Clear</Button>
      <Button Margin="6" Command="{Binding UpdateSeriesCommand}">Update</Button>
        <Button Margin="6" Command="{Binding AddPointCommand}">Add</Button>
    </StackPanel>
    <lvc:CartesianChart Grid.Row="1" Series="{Binding Series}">
    </lvc:CartesianChart>
  </Grid>
</UserControl>
