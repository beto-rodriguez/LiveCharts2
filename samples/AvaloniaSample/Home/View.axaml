<UserControl x:Class="AvaloniaSample.Home.View"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
      <StackPanel Orientation="Vertical">
          <TextBlock Text="Select a theme" Margin="0 0 0 8"></TextBlock>
          <Button Click="SetLight" Margin="0 0 0 8">Light</Button>
          <Button Click="SetDark" Margin="0 0 0 8">Dark</Button>
      </StackPanel>
  </Grid>  
</UserControl>
