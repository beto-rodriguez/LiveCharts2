<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="MauiSample.VisualTest.Tabs.View"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:bars="clr-namespace:MauiSample.Bars.AutoUpdate"
             xmlns:lines="clr-namespace:MauiSample.Lines.AutoUpdate"
             xmlns:scatter="clr-namespace:MauiSample.Scatter.AutoUpdate"
             >
    <ContentPage.Content>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TabbedPage x:Name="TabbedPage" Grid.Row="1">
                <bars:View></bars:View>
                <lines:View></lines:View>
                <scatter:View></scatter:View>
            </TabbedPage>

        </Grid>
    </ContentPage.Content>
</ContentPage>
